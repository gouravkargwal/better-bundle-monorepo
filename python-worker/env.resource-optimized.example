# Resource-Optimized Environment Configuration
# Copy this to .env and adjust values for your low-resource environment

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/betterbundle"

# Redis (Upstash)
REDIS_HOST="your-host.upstash.io"
REDIS_PASSWORD="your-password"
REDIS_TLS=true
REDIS_PORT=6379
REDIS_DB=0

# Worker Settings
WORKER_ID="python-worker-1"
SHOPIFY_API_RATE_LIMIT=20  # Reduced from 40
MAX_RETRIES=2  # Reduced from 3

# Consumer Configuration (Resource Optimization)
ENABLE_FEATURES_CONSUMER=true
ENABLE_ML_TRAINING_CONSUMER=true
ENABLE_COMPLETION_HANDLER=true
ENABLE_HEURISTIC_DECISION_CONSUMER=true

# Resource Optimization Settings
CONSUMER_POLLING_INTERVAL_MS=60000  # 60 seconds (very conservative)
CONSUMER_BATCH_SIZE=2  # Process 2 events at once
CONSUMER_IDLE_SLEEP_SECONDS=20  # 20 seconds between checks
CONSUMER_ERROR_SLEEP_SECONDS=30  # 30 seconds after errors

# Redis Timeout Settings
REDIS_TIMEOUT_BUFFER_SECONDS=10  # 10 second buffer for Redis operations

# Data Collection Configuration
MAX_INITIAL_DAYS=30  # Reduced from 60
MAX_INCREMENTAL_DAYS=15  # Reduced from 30
FALLBACK_DAYS=15  # Reduced from 30

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10  # Increased from 5 seconds
