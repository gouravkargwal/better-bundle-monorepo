    transform: scale(0.98);
  }
  .product-card__title {
    font-size: 16px;
    font-weight: 500;
    margin: 0;
    color: {{ block.settings.title_color | default: '#1e293b' }};
    line-height: 1.4;
  }

  .product-card__price {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.price_color | default: '#059669' }};
    margin: 0;
  }

  .product-card__price-quantity {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .product-card__quantity {
    display: flex;
    align-items: center;
    gap: 4px;
