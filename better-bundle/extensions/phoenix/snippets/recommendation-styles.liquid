  }

  .variant-select:hover {
    border-color: #666;
  }

  /* Selected state for variant selectors */
  .variant-select:not([value=""]) {
    border-color: #000;
    background-color: #f9f9f9;
    font-weight: 500;
  }

  .variant-select:not([value=""]):focus {
    border-color: #000;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
  }

