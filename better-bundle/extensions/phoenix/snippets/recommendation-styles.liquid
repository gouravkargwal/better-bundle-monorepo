    flex-direction: row;
    gap: 8px;
  }

  /* Make dropdowns take full space */
  .variant-option {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 6px;
    min-width: 0; /* Prevent flex item from overflowing */
  }

  .variant-select {
    width: 100%;
    box-sizing: border-box;
    flex: 1;
  }
  .variant-selector {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    background: #ffffff;
    font-size: 14px;
    color: #374151;
    cursor: pointer;
    transition: border-color 0.2s ease;
  }
  .variant-selector:focus {
    outline: none;
    border-color: #000;
  }
  .qty-btn {
    width: 32px;
    height: 32px;
