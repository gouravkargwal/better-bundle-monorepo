    { "type": "color", "id": "title_color", "label": "Title Color", "default": "#1a202c" },
    { "type": "color", "id": "price_color", "label": "Price Color", "default": "#2d3748" },
    { "type": "color", "id": "button_bg", "label": "Button Background", "default": "#000000" },
