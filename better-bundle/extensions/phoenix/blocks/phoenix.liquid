<!-- Phoenix Recommendations Widget - Polaris Integration -->

{%- comment -%}
  Liquid Variables for Cleaner Code
{%- endcomment -%}
{%- assign product_id = block.settings.product.id | default: '' -%}
{%- assign layout_style = block.settings.layout_style | default: 'grid' -%}
{%- assign show_prices = block.settings.show_prices | default: true -%}
{%- assign show_reasons = block.settings.show_reasons | default: true -%}
{%- assign show_add_to_cart = block.settings.show_add_to_cart | default: true -%}
{%- assign custom_css_class = block.settings.custom_css_class | default: '' -%}

<!-- Phoenix Widget Debug: Widget is being rendered -->
<div class="phoenix-recommendations-widget {{ custom_css_class }}"
     data-product-id="{{ product_id }}" 
     data-limit="8"
     data-layout="{{ layout_style }}"
     data-show-prices="{{ show_prices }}"
     data-show-reasons="{{ show_reasons }}"
     data-show-add-to-cart="{{ show_add_to_cart }}"
     data-auto-theme-colors="true"
     style="
       --phx-theme-font-family: inherit;
       --phx-theme-text-color: inherit;
       background: transparent;
       color: inherit;
       display: none;
     ">
  
  <h3 class="phoenix-widget-title" style="display: none;">
    <!-- Title will be populated by JavaScript from API response -->
  </h3>

  <div class="phoenix-widget-content" style="display: none;">
    <div class="phoenix-widget-grid">
      {%- comment -%} This grid will be populated by JavaScript {%- endcomment -%}
    </div>
  </div>

  {%- comment -%}
    Template for product cards - uses theme-compatible structure
  {%- endcomment -%}
  <template data-template="phoenix-product-card">
    <div class="phoenix-product-card">
      <a href="#" class="phoenix-product-link">
        <div class="phoenix-product-image-carousel">
          <div class="phoenix-image-container">
            <img src="" alt="" loading="lazy" class="phoenix-main-image">
          </div>
          <div class="phoenix-image-dots">
            <!-- Dots will be generated by JavaScript -->
          </div>
          <button class="phoenix-image-prev" aria-label="Previous image">‚Äπ</button>
          <button class="phoenix-image-next" aria-label="Next image">‚Ä∫</button>
        </div>
        <div class="phoenix-product-info">
          <h4 class="phoenix-product-title"></h4>
          <p class="phoenix-product-price"></p>
          <span class="phoenix-product-reason" style="display: none;"></span>
        </div>
      </a>
      <div class="phoenix-product-actions">
        {% comment %} The button will be created by JavaScript later {% endcomment %}
      </div>
    </div>
  </template>

  <!-- Enhanced Design Mode Preview (shown in theme customizer) -->
  {% if request.design_mode %}
  <div class="phoenix-widget-preview" style="display: block;">
    <!-- Design Mode Header -->
    <div class="phoenix-preview-header" style="
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: var(--phx-spacing-md) var(--phx-spacing-lg);
      margin: calc(-1 * var(--phx-spacing-lg)) calc(-1 * var(--phx-spacing-lg)) var(--phx-spacing-lg) calc(-1 * var(--phx-spacing-lg));
      border-radius: var(--phx-border-radius-md) var(--phx-border-radius-md) 0 0;
      font-size: var(--phx-font-size-sm);
      font-weight: var(--phx-font-weight-semibold);
      display: flex;
      align-items: center;
      gap: var(--phx-spacing-sm);
    ">
      <span style="font-size: var(--phx-font-size-base);">üé®</span>
      <span>Phoenix Recommendations Preview</span>
      <span style="
        background: rgba(255,255,255,0.2);
        padding: var(--phx-spacing-xs) var(--phx-spacing-sm);
        border-radius: var(--phx-spacing-md);
        font-size: var(--phx-font-size-sm);
        font-weight: var(--phx-font-weight-normal);
      ">Smart Recommendations</span>
    </div>

    <!-- Responsive Preview Controls -->
    <div class="phoenix-preview-controls" style="
      display: flex;
      gap: var(--phx-spacing-sm);
      margin-bottom: var(--phx-spacing-lg);
      padding: var(--phx-spacing-sm);
      background: var(--phx-color-gray-50);
      border-radius: var(--phx-border-radius);
      border: var(--phx-border-width) solid var(--phx-color-gray-200);
    ">
      <button class="phoenix-preview-btn active" data-view="desktop" style="
        padding: var(--phx-spacing-xs) var(--phx-spacing-md);
        border: var(--phx-border-width) solid var(--phx-color-gray-300);
        background: var(--phx-color-white);
        border-radius: var(--phx-border-radius-sm);
        font-size: var(--phx-font-size-sm);
        cursor: pointer;
        transition: all var(--phx-transition-normal);
      ">üñ•Ô∏è Desktop</button>
      <button class="phoenix-preview-btn" data-view="tablet" style="
        padding: var(--phx-spacing-xs) var(--phx-spacing-md);
        border: var(--phx-border-width) solid var(--phx-color-gray-300);
        background: var(--phx-color-white);
        border-radius: var(--phx-border-radius-sm);
        font-size: var(--phx-font-size-sm);
        cursor: pointer;
        transition: all var(--phx-transition-normal);
      ">üì± Tablet</button>
      <button class="phoenix-preview-btn" data-view="mobile" style="
        padding: var(--phx-spacing-xs) var(--phx-spacing-md);
        border: var(--phx-border-width) solid var(--phx-color-gray-300);
        background: var(--phx-color-white);
        border-radius: var(--phx-border-radius-sm);
        font-size: var(--phx-font-size-sm);
        cursor: pointer;
        transition: all var(--phx-transition-normal);
      ">üì± Mobile</button>
    </div>

    <!-- Preview Container with Responsive Views -->
    <div class="phoenix-preview-container" style="
      border: 2px dashed var(--phx-color-gray-300);
      border-radius: var(--phx-border-radius-md);
      padding: var(--phx-spacing-lg);
      background: var(--phx-color-white);
      transition: all var(--phx-transition-slow);
    ">
      <div class="phoenix-widget-grid phoenix-widget-grid--{{ layout_style }} phoenix-preview-grid" style="
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(var(--phx-grid-min-width), 1fr));
        gap: var(--phx-grid-gap);
        transition: all var(--phx-transition-slow);
      ">
        <!-- Enhanced Preview Product Cards -->
        {% for i in (1..8) %}
          <div class="phoenix-product-card phoenix-preview-card" style="
            background: var(--phx-card-background);
            border: var(--phx-border-width) solid var(--phx-card-border);
            border-radius: var(--phx-card-border-radius);
            padding: var(--phx-card-padding);
            transition: all var(--phx-transition-slow);
            position: relative;
            overflow: hidden;
          ">
            <!-- Preview Badge -->
            {% if show_preview_badges %}
            <div style="
              position: absolute;
              top: var(--phx-spacing-sm);
              right: var(--phx-spacing-sm);
              background: var(--phx-color-success);
              color: var(--phx-color-white);
              padding: var(--phx-spacing-xs) var(--phx-spacing-xs);
              border-radius: var(--phx-border-radius-sm);
              font-size: var(--phx-font-size-sm);
              font-weight: var(--phx-font-weight-semibold);
              z-index: 2;
            ">PREVIEW</div>
            {% endif %}
            
            <a href="#" class="phoenix-product-link" style="text-decoration: none; color: inherit;">
              <div class="phoenix-product-image" style="
                height: var(--phx-image-height);
                overflow: hidden;
                border-radius: var(--phx-image-border-radius);
                margin-bottom: var(--phx-spacing-md);
                position: relative;
              ">
                <img src="data:image/svg+xml;base64," 
                     alt="Preview Product {{ i }}" 
                     loading="lazy"
                     style="
                       width: 100%;
                       height: 100%;
                       object-fit: cover;
                       transition: transform var(--phx-transition-slow);
                     "
                     {% if enable_hover_effects %}
                     onmouseover="this.style.transform='scale(1.05)'"
                     onmouseout="this.style.transform='scale(1)'"
                     {% endif %}>
              </div>
              <div class="phoenix-product-info">
                <h4 class="phoenix-product-title" style="
                  font-size: var(--phx-product-title-font-size);
                  font-weight: var(--phx-product-title-font-weight);
                  color: var(--phx-product-title-color);
                  margin: 0 0 var(--phx-spacing-sm) 0;
                  line-height: var(--phx-line-height-tight);
                ">Sample Product {{ i }}</h4>
                {% if show_prices %}
                  <p class="phoenix-product-price" style="
                    font-size: var(--phx-price-font-size);
                    font-weight: var(--phx-price-font-weight);
                    color: var(--phx-price-color);
                    margin: 0 0 var(--phx-spacing-sm) 0;
                  ">${{ 19.99 | plus: i | times: 5 | money_without_currency }}</p>
                {% endif %}
                {% if show_reasons %}
                  <span class="phoenix-product-reason" style="
                    font-size: var(--phx-font-size-sm);
                    color: var(--phx-color-gray-500);
                    background: var(--phx-color-gray-50);
                    padding: var(--phx-spacing-xs) var(--phx-spacing-sm);
                    border-radius: var(--phx-border-radius-sm);
                    display: inline-block;
                    margin-top: var(--phx-spacing-sm);
                  ">‚ú® Recommended for you</span>
                {% endif %}
              </div>
            </a>
            {% if show_add_to_cart %}
              <div class="phoenix-product-actions" style="margin-top: 12px;">
                <button class="phoenix-add-to-cart-btn" disabled style="
                  width: 100%;
                  padding: 10px 16px;
                  background: #2c5aa0;
                  color: #ffffff;
                  border: none;
                  border-radius: 4px;
                  font-size: 14px;
                  font-weight: 600;
                  cursor: not-allowed;
                  opacity: 0.7;
                  transition: all 0.3s ease;
                ">
                  Add to Cart
                </button>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Preview Footer with Settings Summary -->
    <div class="phoenix-preview-footer" style="
      margin-top: 16px;
      padding: 12px;
      background: #f8f9fa;
      border-radius: 6px;
      border: 1px solid #e9ecef;
      font-size: 12px;
      color: #6c757d;
    ">
      <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 8px;">
        <div>
          <strong>Settings:</strong> {{ layout_style | capitalize }} layout ‚Ä¢ 
          {% if show_prices %}Prices{% else %}No prices{% endif %} ‚Ä¢ 
          {% if show_reasons %}Reasons{% else %}No reasons{% endif %} ‚Ä¢ 
          {% if show_add_to_cart %}Add to cart{% else %}No buttons{% endif %}
        </div>
        <div style="color: #28a745; font-weight: 600;">
          ‚úì Responsive Grid
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</div>

<!-- External Assets -->
<link rel="stylesheet" href="{{ 'phoenix-recommendations.css' | asset_url }}">


  {% unless request.design_mode %}
<!-- Phoenix Modular JavaScript Files (load in dependency order) -->
  <script src="{{ 'phoenix-polaris-integration.js' | asset_url }}" defer></script>
  <script src="{{ 'context-detection.js' | asset_url }}" defer></script>
  <script src="{{ 'phoenix-config.js' | asset_url }}" defer></script>
  <script src="{{ 'phoenix-security.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-utils.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-api.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-queue.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-cart.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-analytics.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-renderer.js' | asset_url }}" defer></script>
<script src="{{ 'phoenix-main.js' | asset_url }}" defer></script>
{% endunless %}

{% unless request.design_mode %}
<!-- AJAX Support for Dynamic Themes -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Re-initialize Phoenix when new content is loaded via AJAX
  document.addEventListener('shopify:section:load', function(event) {
    if (event.target.querySelector('.phoenix-recommendations-widget')) {
      setTimeout(() => {
        if (window.PhoenixRecommendations && window.PhoenixRecommendations.initializePhoenixRecommendations) {
          window.PhoenixRecommendations.initializePhoenixRecommendations();
        }
      }, 100);
    }
  });
  
  // Re-initialize when sections are reordered
  document.addEventListener('shopify:section:reorder', function() {
    setTimeout(() => {
      if (window.PhoenixRecommendations && window.PhoenixRecommendations.initializePhoenixRecommendations) {
        window.PhoenixRecommendations.initializePhoenixRecommendations();
      }
    }, 100);
  });
});
</script>
{% endunless %}

{% schema %}
{
  "name": "Phoenix Recommendations",
  "target": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "info": "Choose a specific product (or leave empty for auto-detection)"
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Layout Style",
      "info": "Choose how recommendations are displayed",
      "options": [
        { "value": "grid", "label": "Grid Layout" },
        { "value": "carousel", "label": "Carousel/Slider" },
        { "value": "list", "label": "List Layout" }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "show_prices",
      "label": "Show Product Prices",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_reasons",
      "label": "Show Recommendation Reasons",
      "info": "Display why each product is recommended",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_add_to_cart",
      "label": "Show Add to Cart Buttons",
      "default": true
    },
    {
      "type": "text",
      "id": "custom_css_class",
      "label": "Custom CSS Class",
      "info": "Add custom CSS class for additional styling"
    }
  ]
}
{% endschema %}