{
  "name": "better-bundle",
  "private": true,
  "scripts": {
    "build": "remix vite:build",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "dev": "dotenv -e .env.dev -- shopify app dev",
    "dev:tunnel": "dotenv -e .env.dev -- shopify app dev --tunnel-url https://4edae356409a.ngrok-free.app:3000",
    "dev:phoenix": "concurrently \"npm run phoenix:watch\" \"npm run dev\"",
    "dev:phoenix:tunnel": "concurrently \"npm run phoenix:watch\" \"npm run dev:tunnel\"",
    "phoenix:watch": "cd dev/phoenix-react && npm run build:watch",
    "phoenix:build": "cd dev/phoenix-react && npm run build",
    "phoenix:dev": "cd dev/phoenix-react && npm run dev",
    "prod": "dotenv -e .env.prod -- shopify app dev",
    "deploy:dev": "dotenv -e .env.dev -- shopify app deploy --config shopify.app.dev.toml",
    "deploy:prod": "dotenv -e .env.prod -- shopify app deploy --config shopify.app.prod.toml",
    "config:use:dev": "shopify app config use shopify.app.dev.toml",
    "config:use:prod": "shopify app config use shopify.app.prod.toml",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate",
    "db:pull": "prisma db pull && prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite"
  },
  "type": "module",
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@remix-run/dev": "^2.16.1",
