# BetterBundle Global Environment Variables
# This file contains ALL environment variables for ALL services
# Use Doppler to manage these variables in production

# =============================================================================
# GLOBAL CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION (Shared across all services)
# =============================================================================

# PostgreSQL Database (Neon)
DATABASE_URL="postgresql://username:password@localhost:5432/betterbundle"

# =============================================================================
# REDIS CONFIGURATION (Shared across Shopify App and Fly.io Worker)
# =============================================================================

# Upstash Redis
REDIS_HOST=your-db.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# SHOPIFY CONFIGURATION
# =============================================================================

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,read_orders
SHOPIFY_APP_URL=https://your-app.vercel.app
SHOPIFY_APP_NAME="BetterBundle"
# Note: App uses offline access tokens (never expire)

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Service URLs (Local Development)
FLY_WORKER_URL=http://localhost:3001
RAILWAY_ML_API_URL=http://localhost:8000
SHOPIFY_APP_URL=https://gateway-universities-relations-papua.trycloudflare.com

# Service URLs (Production)
# FLY_WORKER_URL=https://your-worker.fly.dev
# RAILWAY_ML_API_URL=https://your-ml-api.railway.app
# SHOPIFY_APP_URL=https://your-app.vercel.app

# =============================================================================
# SECURITY
# =============================================================================

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# =============================================================================
# SHOPIFY APP SPECIFIC
# =============================================================================

# Shopify App Port
SHOPIFY_APP_PORT=3000

# =============================================================================
# FLY.IO WORKER SPECIFIC
# =============================================================================

# Fly.io Worker Configuration
WORKER_PORT=3001
WORKER_HOST=0.0.0.0

# =============================================================================
# ML API SPECIFIC
# =============================================================================

# ML API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ML Configuration
MAX_PRODUCTS=5000
MAX_ORDERS=10000
ML_TIMEOUT=300

# =============================================================================
# DEPLOYMENT TOKENS
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your_github_token

# Vercel
VERCEL_TOKEN=your_vercel_token

# Fly.io
FLY_API_TOKEN=your_fly_api_token

# Railway
RAILWAY_TOKEN=your_railway_token

# Doppler
DOPPLER_TOKEN=your_doppler_token

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id

# Error Tracking
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Debug Configuration
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# MONITORING
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
